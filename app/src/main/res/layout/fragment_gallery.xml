<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="56dp"
                android:layout_height="62dp"
                android:background="@drawable/about" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="305dp"
                android:layout_height="72dp"
                android:layout_marginTop="30dp"
                android:paddingTop="20dp"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='A smart Complain mobile application for complaints management in University is described.Students users of this mobile application can  easy to ask for any Query or for any resources and issues using a single application on their smartphones. They can register complaints using text, and they do not have to specify which authority the complaint is directed to."'
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="49dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Logouts"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="208dp"
            android:layout_height="78dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/background_loginedit"
            android:text="Logout Account"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/white" />
    </LinearLayout>

</LinearLayout>